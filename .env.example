# Database
# Dev: direct connection, no pooler needed.
DATABASE_URL="postgresql://user:password@localhost:5432/bookwork?schema=public"

# Production (serverless / Vercel):
#   - Set DATABASE_URL to a Prisma Accelerate or PgBouncer URL (pooled).
#   - Set DIRECT_URL to the raw Postgres URL so `prisma migrate` bypasses the pooler.
#   - Append connection_limit to the raw URL to cap connections per Lambda:
#       postgresql://...?connection_limit=1&pool_timeout=5   (serverless)
#       postgresql://...?connection_limit=10&pool_timeout=10 (long-running server)
#   Accelerate URL format: prisma://accelerate.prisma-data.net/?api_key=YOUR_KEY
DIRECT_URL="postgresql://user:password@localhost:5432/bookwork?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Apple OAuth
APPLE_ID="your-apple-id"
APPLE_SECRET="your-apple-secret"

# Stripe
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PRICE_MONTHLY="price_monthly_id"
STRIPE_PRICE_YEARLY="price_yearly_id"

# VOIP — set VOIP_PROVIDER to the one you want active (daily | livekit | agora | twilio)
VOIP_PROVIDER="daily"

# Daily.co  https://docs.daily.co
DAILY_API_KEY="your-daily-api-key"
DAILY_WEBHOOK_SECRET="your-daily-webhook-secret"

# LiveKit   https://docs.livekit.io
LIVEKIT_API_KEY="your-livekit-api-key"
LIVEKIT_API_SECRET="your-livekit-api-secret"
LIVEKIT_WEBHOOK_SECRET="your-livekit-webhook-secret"
LIVEKIT_WS_URL="wss://your-project.livekit.cloud"

# Agora     https://docs.agora.io
AGORA_APP_ID="your-agora-app-id"
AGORA_APP_CERTIFICATE="your-agora-app-certificate"
AGORA_WEBHOOK_TOKEN="your-agora-webhook-token"

# Twilio    https://www.twilio.com/docs/video
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_API_KEY="SKxxxxxxxxxxxxxxxx"
TWILIO_API_SECRET="your-twilio-api-secret"

# Security / Rate limiting
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Cron job auth — Vercel injects this automatically; set it in Vercel dashboard too
# Generate with: openssl rand -hex 32
CRON_SECRET="generate-with-openssl-rand-hex-32"

# Redis (Upstash) for production rate limiting — in-memory is used in dev
# Get free instance at https://upstash.com
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"
